<UserControl x:Class="PointOfSale.OrderList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <DockPanel>
        <TextBox Name="orderNumberText" DockPanel.Dock="Top" TextAlignment="Center" FontSize="18"/>
        <TextBox Name="totalText" DockPanel.Dock="Bottom" TextAlignment="Center" FontSize="18"/>
        <TextBox Name="taxText" DockPanel.Dock="Bottom" TextAlignment="Center" FontSize="18"/>
        <TextBox Name="subtotalText" DockPanel.Dock="Bottom" TextAlignment="Center" FontSize="18"/>
        <ListView Name="orderItemsText"/>

    </DockPanel>
</UserControl>
