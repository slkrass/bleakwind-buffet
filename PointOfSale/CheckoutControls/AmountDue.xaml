<UserControl x:Class="BleakwindBuffet.PointOfSale.AmountDue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="150">
    <TextBlock Text="{Binding Path=Number, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:AmountDue}}" 
               
               FontSize="20" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"/>
</UserControl>
