<UserControl x:Class="PointOfSale.MenuContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Border Name="menuBorder" Grid.ColumnSpan="2"/>
        <Border Name="currentItemsInOrderBorder" Grid.Column="2"/>

        <Button Name="cancelOrderButton" Grid.Column="1" Grid.Row="1" FontSize="16">Cancel Order</Button>
        <Button Name="completeOrderButton" Grid.Column="2" Grid.Row="1" FontSize="16">Complete Order</Button>
    </Grid>
</UserControl>
